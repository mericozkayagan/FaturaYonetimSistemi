@using FaturaYonetimSistemi.Controllers
@model CardClass
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@await Component.InvokeAsync("GetPayment",new {id=ViewBag.d})
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Borç Ödeme Arayüzü</h4>
            
            <form method="post" class="forms-sample">
                <label>Kart Numaranız</label>
                @Html.TextBoxFor(x => x.CardNumber, new { @class="form-control"})
                <br />
                <label>Son Kullanım Tarihi</label>
                @Html.TextBoxFor(x => x.ExpireDate, new { @class="form-control"})
                <br />
                <label>CVC</label>
                @Html.TextBoxFor(x => x.CVC, new { @class="form-control"})
                 <br />                

               <button type="submit" class="btn btn-outline-info">Borç Öde</button>

            </form>
        </div>
    </div>
</div>
